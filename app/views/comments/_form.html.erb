<%= form_with model: [ article, article.comments.build ] do |form| %>
  
    <div class="text-sm font-medium text-gray-900 mt-2 mb-1">
    <%= form.label :commenter %>
    </div>
    <%= form.text_field :commenter %>
    
  <p>
    <div class="text-sm font-medium text-gray-900 mt-2 mb-1">

    <%= form.label :body %></div>
    <%= form.textarea :body %>
  </p>
    <p>
    <div class="text-sm font-medium text-gray-900 mt-2 mb-1">

  <%= form.label :status %></div>
  <%= form.select :status, Visible::VALID_STATUSES, selected: 'public' %>
</p>


  <div class="mt-5 text-white bg-gradient-to-r max-w-56 from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
    <%= form.submit %>
  </div>
<% end %>
