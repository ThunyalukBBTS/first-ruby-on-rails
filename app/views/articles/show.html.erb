<div class="mx-auto max-w-xl bg-white px-5 py-5 rounded-lg">
<div class="mt-2">
<%= link_to "Back", articles_path, class:"text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2" %>
</div>
<h1 class="mt-5 text-4xl text-blue-600 font-semibold"><%= @article.title %></h1>

<p class="text-xl"><%= @article.body %></p>

<div class="flex my-2">
  <%= link_to "Edit", edit_article_path(@article), class:"focus:outline-none text-black bg-yellow-300 hover:bg-yellow-400 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-3 py-1 me-2" %>
  <%= link_to "Delete   ", article_path(@article),
                    class:"focus:outline-none text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-3 py-1 me-2 ", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
</div>

<h2 class="text-gray-800 text-xl font-semibold mt-5">Comments</h2>
<%= render @article.comments %>

<h2 class="text-gray-800 mt-5 text-xl font-semibold">Add a comment</h2>
<%= render "comments/form", article: @article %>
</div>